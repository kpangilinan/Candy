<!DOCTYPE html>
<html>
<head>
  <title>Candy Plug-in Demo</title>
  
  <script src="../../../../popcorn-js/popcorn.js"></script>
  <script src="popcorn.candy.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var p = Popcorn('#video')
      .play() 

      .candy({
        start: 0, // seconds
        end: 2, // seconds
        filter: 'rotate'
      })
      
      .candy({
        start: 2, // seconds
        end: 4, // seconds
        filter: 'rgb|100|0|0'
      })
	  
	  .candy({
        start: 4, // seconds
        end: 7, // seconds
        filter: 'greenscreen|LostLogo_.jpg'
      })
      
      .candy({
        start: 7, // seconds
        end: 9, // seconds
        filter: 'blur'
      })
	  
	  .candy({
        start: 9, // seconds
        end: 12, // seconds
        filter: 'modulate|5|5|v'
      })
	  
	  .candy({
        start: 12, // seconds
        end: 18, // seconds
        filter: 'comic-bw'
      })
	  
	  .candy({
        start: 18, // seconds
        end: 22, // seconds
        filter: 'xray'
      })
      

    }, false);

  </script>
</head>
